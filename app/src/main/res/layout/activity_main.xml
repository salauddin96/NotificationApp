<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/titleEtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"
        android:paddingLeft="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/desEtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="write desc..."
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/titleEtxt"
        app:layout_constraintStart_toStartOf="@+id/titleEtxt"
        app:layout_constraintTop_toBottomOf="@+id/titleEtxt" />

    <Button
        android:id="@+id/lowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Low"
        app:layout_constraintEnd_toStartOf="@+id/highBtn"
        app:layout_constraintStart_toStartOf="@+id/desEtxt"
        app:layout_constraintTop_toBottomOf="@+id/desEtxt" />

    <Button
        android:id="@+id/highBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="High"
        app:layout_constraintEnd_toEndOf="@+id/desEtxt"
        app:layout_constraintTop_toBottomOf="@+id/desEtxt" />

</androidx.constraintlayout.widget.ConstraintLayout>